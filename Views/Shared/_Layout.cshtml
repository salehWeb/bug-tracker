<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Buegee</title>
    <link rel="stylesheet" href="~/icons/all.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
    <header class="flex flex-row justify-between items-center">
        <a href="/">Buegee </a>
        <div  class="flex flex-row gap-2">
            <a href="/auth/login" class="border-2 transition-all shadow-md border-secondary hover:shadow-lg hover:rounded-md text-base text-primary rounded-sm px-2 py-1 bg-white">login</a>
            <img class="rounded-full w-10 h-10 object-contain" src="/test" alt="">
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>&copy; 2023 - Buegee</footer>
    @RenderSection("Scripts", required: false)
</body>
</html>

